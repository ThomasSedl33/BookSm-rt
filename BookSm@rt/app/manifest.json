{
  "manifest_version": 2,

  "name": "BookSm@rt",
  "description": "Find cheaper options of a book you're attempting to purchase",
  "version": "1.0",

  "background": {
    "persistent": true,
    "scripts": [ "background/background.js", "scripts/jquery-3.2.1.min.js" ]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
        "js": ["scripts/getHTML.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "background",
    "tabs",
    "https://www.qbd.com.au/*",
    "https://www.angusrobertson.com.au/*",
    "https://*/*",
    "http://*/*",
    "https://allorigins.me/*"
    
  ],
  "content_security_policy": "script-src 'self'  https://allorigins.me/; https://www.qbd.com.au/; https://www.angusrobertson.com.au/; object-src 'self'",
  "browser_action": {
    "default_icon": "img/p02vdpfn.jpg",
    "default_popup": "popup.html",
      "icons": { "128": "p02vdpfn.jpg" } 
  }
}