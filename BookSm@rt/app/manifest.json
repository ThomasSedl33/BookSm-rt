{
  "manifest_version": 2,

  "name": "BookSm@rt",
  "description": "Find cheaper options of a book you're attempting to purchase",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": [ "background/background.js" ]
  },

  "permissions": [
    "https://secure.flickr.com/",
    "activeTab",
    "tabs",
    "https://www.qbd.com.au/",
    "https://*/",
    "http://*/"
    
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.qbd.com.au/; object-src 'self'",
  "browser_action": {
    "default_icon": "img/p02vdpfn.jpg",
    "default_popup": "popup.html",
      "icons": { "128": "p02vdpfn.jpg" } 
  }
}